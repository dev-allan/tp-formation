{% extends 'base.html.twig' %}

{% block title %}Les promotions{% endblock %}

{% block body %}
    <h1>Liste des promotions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Formation</th>
                <th>Formateur</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.nom }}</td>
                <td>{{ promotion.formation }}</td>
                <td>{{ promotion.formateur }}</td>
                <td>
                    <a href="{{ path('app_promotion_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_promotion_new') }}">Create new</a>
{% endblock %}
